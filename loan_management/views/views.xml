<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--  form view for loan scheme  -->
    <record model="ir.ui.view" id="loan_schemes_form">
        <field name="name">loan.schemes.form</field>
        <field name="model">loan.schemes</field>
        <field name="arch" type="xml">
            <form string="Loan Schemes">
                <sheet>
                    <header>
                        <h1>New</h1>
                    </header>
                    <group class="col-8">
                        <field name="name"/>
                    </group>
                    <group string="Details" class="col-8">
                        <field name="duration"/>
                        <field name="interest_rate"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--  tree view for loan scheme  -->
    <record model="ir.ui.view" id="loan_schemes_tree">
        <field name="name">loan.schemes.tree</field>
        <field name="model">loan.schemes</field>
        <field name="arch" type="xml">
            <tree string="Loan Schemes">
                <field name="name"/>
                <field name="duration"/>
                <field name="interest_rate"/>
            </tree>
        </field>
    </record>
    <!--  action for loan schemes -->
    <record id="Loan_schemes" model="ir.actions.act_window">
        <field name="name">Loan Schemes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">loan.schemes</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new record!
            </p>
        </field>
    </record>

    <!--  menu item  -->
    <menuitem name="Loan Management" id="menu_loan_management_root" sequence="1"/>
    <menuitem name="Loans"
              id="menu_loans"
              sequence="1" parent="menu_loan_management_root"/>
    <!--  Configuration menu  -->
    <menuitem name="Configuration"
              id="menu_configuration"
              sequence="2" parent="menu_loan_management_root"/>
    <menuitem name="Loan Schemes"
              id="menu_loan_schemes"
              sequence="3"
              parent="menu_configuration" action="Loan_schemes"/>

</odoo>