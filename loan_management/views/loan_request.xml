<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--  form view for loan.request  -->
    <record model="ir.ui.view" id="loan_request_form_view">
        <field name="name">loan.request.form</field>
        <field name="model">loan.request</field>
        <field name="arch" type="xml">
            <form string="Loan Proofs">
                <header>

                    <button name="action_send_request" type="object" states="draft" string='Apply' class="oe_highlight"/>
<!--                    <button name="action_done_request" type="object" states="sent" string='Done' class="oe_highlight"/>-->
                    <button name="action_cancel" type="object" string="Cancel" states="draft" />
                    <button name="action_approve" type="object" string="Approve" states="sent" class="oe_highlight" groups="loan_management.group_loan_manager"/>
                    <button name="action_refuse" type="object" string="Refuse" states="sent" class="oe_highlight" groups="loan_management.group_loan_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,approve"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="sequence_no"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" widget="res_partner_many2one"
                                   context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}"
                                   options='{"always_reload": True}'/>
                            <field name="email"/>
<!--                            <field name="function"/>-->
                            <field name="applied_date" states="sent,approve"/>
                        </group>
                        <group>
                            <field name="currency_id"/>
                            <field name="principal_amount"/>
                            <field name="loan_schemes_id"/>
                            <field name="approved_date" states="approve"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="General">
                            <group class="col-md-6">
                                <field name="interest_amount" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="monthly_payment" readonly="1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </page>
                        <page string="Installment">
                            <field name="loan_lines">
                                <tree string="Installments" editable="bottom">
                                    <field name="date"/>
                                    <field name="amount"/>
                                    <field name="paid" readonly="1" invisibile="1"/>
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--  tree view for loan.request  -->
    <record model="ir.ui.view" id="loan_request_tree">
        <field name="name">loan.request.tree</field>
        <field name="model">loan.request</field>
        <field name="arch" type="xml">
            <tree string="Loan Proofs">
                <field name="sequence_no"/>
                <field name="partner_id"/>
                <field name="email"/>
                <field name="applied_date"/>
                <field name="principal_amount"/>
                <field name="loan_schemes_id"/>
                <field name="approved_date"/>
                <field name="state" decoration-success="state == 'approve'"
                                   decoration-info="state == 'sent' or state == 'draft'"
                                   widget="badge" optional="show"/>
            </tree>
        </field>
    </record>
    <!--  action for loan.request -->
    <record id="Loan_request" model="ir.actions.act_window">
        <field name="name">Loan Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">loan.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new record!
            </p>
        </field>
    </record>
    <!--  menu item Loan Request  -->
    <menuitem name="Loan Request"
              id="menu_loan_request"
              sequence="1"
              parent="menu_loans" action="Loan_request"/>

</odoo>